
@{
    ViewBag.Title = "WahtsApp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @using (Html.BeginForm("WahtsApp", "Home", FormMethod.Post))
    {        
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="row">
                    <div class="col-6">
                        <label>Number <span class="text-danger">*</span></label>
                        <input autocomplete="off" type="text" maxlength="10" class="form-control" required name="Number" placeholder="Number" />
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>